<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ArtInstituteOfChicagoNO" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/c2</item>
        <item name="colorPrimaryVariant">@color/c1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/c5</item>
        <item name="colorSecondaryVariant">@color/c4</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App.MySplashTheme" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenBackground">@color/pri</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/lky</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.ArtInstituteOfChicagoNO</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/brand</item>
    </style>

    <style name="Theme.ArtInstituteOfChicagoNO.AppBarOverlay" parent="Theme.MaterialComponents.DayNight.DarkActionBar" />

    <style name="cardItem" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#B4CBE3</item>
    </style>

    <style name="myIcon" parent="Theme.ArtInstituteOfChicagoNO">
        <item name="backgroundTint">@color/black</item>
    </style>

</resources>